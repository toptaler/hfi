.post
  .votes
    = link_to "", post_vote_path(post), :method => :post, :"data-type" => :json, :remote => true, :"data-post-id" => post.id, :authenticity_token => form_authenticity_token, class: 'vote glyphicon glyphicon-arrow-up'
    .vote #{post.votes.to_i}
  .blah
    .image
      = link_to image_tag(post.image_url, width: '284'), post_detail_path(post.id), data: {colorbox: true}
    .info
      .title= post.title
      .description= post.description
      .comments.pull-right= link_to "#{post.comments.count} comments", post_detail_path(post.id), data: {colorbox: true}
    .clearfix
