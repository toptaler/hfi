<div class="row">
  <div class="col-md-10 col-md-offset-1 cr-card">
    <div class="row">
      <div class="col-xs-2 col-md-1 upvote <%= campaign.has_user_voted(current_user) ? 'upvoted' : ''%>">
        <%= link_to '', campaign_toggle_vote_path(campaign.id), :method => :post, 'data-type' => :json, :remote => true, 'data-campaign-id' => campaign.id, :authenticity_token => form_authenticity_token, class: 'glyphicon glyphicon-arrow-up upvote-link' %>
        <span class="upvote-count"><%= campaign.votes_count ?  campaign.votes_count : 0%></span>
      </div>
      <div class="col-md-4 featured-image">
        <%= link_to image_tag(campaign.featured_image.url(:crowdreview_cropped), width: '288'), post_detail_path(campaign.id), data: {colorbox: true}%>
      </div>
      <div class="col-xs-10 col-md-7 campaign-info">
        <h2 class="campaign-title"><%= campaign.title %></h2>
        <div class="excerpt">
          <%= campaign.excerpt %>
        </div>
        <div class="comments pull-right">
          <%= campaign.comments_count ?  campaign.comments_count : 0%> comments
        </div>
      </div>
    </div>
  </div>
</div>


